include includes/variables.pug
include includes/head.pug
include includes/header.pug
include includes/footer-wrapper.pug
include includes/production-item.pug
include includes/_includes.pug


-var pageClassName = variables.page.production.className;
-var pageTitle = variables.page.production.title;
-var digitalPrinting = variables.page.production.digitalPrinting;
-
  var widePrinting = variables.page.production.widePrinting;
  var souvenir = variables.page.production.souvenir;
  var design = variables.page.production.design;

<!DOCTYPE html>
html(lang="ru")
  +head(pageTitle, pageTitle)
  body(class=pageClassName)
    +header

    main(class=`${pageClassName}__main`)
      h1.visually-hidden Вся продукция и услуги типографии Копи шоп оранж
      +productionItem(`${pageClassName}__production-item`, digitalPrinting)
      +decorativeWrapper(pageClassName + '__decorative-wrapper')
      +productionItem(`${pageClassName}__production-item`, widePrinting)
      +decorativeWrapper(pageClassName + '__decorative-wrapper-image', {
        classModifiers: '--image',
      })
      +productionItem(`${pageClassName}__production-item`, souvenir)
      div(class=`${pageClassName}__wrap-design`)
        +decorativeLine(pageClassName + '__decorative-line', {
          classModifiers: ['--simple', '--simple-color-orange'],
        })
        +productionItem(`${pageClassName}__production-item ${pageClassName}__production-item--design production-item--design-icon`, design)

    +footerWrapper
