include includes/variables.pug
include includes/head.pug
include includes/header.pug
include includes/footer.pug

-var pageClassName = variables.page.main.className;
-var pageTitle = variables.page.main.title;

<!DOCTYPE html>
html(lang="ru")
  +head(pageTitle)
  body(class=pageClassName)
    +header(pageClassName + '__header')
    main(class=pageClassName + '__main')
      
    +footer(pageClassName + '__footer')
