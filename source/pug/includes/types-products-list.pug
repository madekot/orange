mixin typesProductsList(className, items)
  -
    var imagePath = variables.imagePath || 'test';

    var teamplateItem = {
      title: 'lorem title item',
      href: 'page-empty.html',
      imageName: 'types-products-list__image--kalendar.jpg',
    };

    var items = items || [
      teamplateItem, teamplateItem
    ];

  ul(class=[className, 'types-products-list'])
    each item in items
      li.types-products-list__item
        a.types-products-list__link(href=item.href || 'page-empty.html')
          .types-products-list__wrap-image
            img.types-products-list__image(src=imagePath + item.imageName, loading="lazy", alt=item.imageAlt)
          h3.types-products-list__title #{item.title}
