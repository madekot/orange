include header-work-schedule.pug
include header-email.pug
include header-logo.pug
include header-phone.pug
include header-address.pug
include header-nav.pug

mixin header(className, obj)
  header(class=[className, 'header'])
    .header__wrap-info
      +header-work-schedule('header__wrap-info-item header__wrap-info-item--work-schedule')
      +header-email('header__wrap-info-item header__wrap-info-item--email')
      +headerLogo('header__wrap-info-item header__wrap-info-item--logo', obj)
      +header-phone('header__wrap-info-item header__wrap-info-item--header-phone')
      +header-address('header__wrap-info-item header__wrap-info-item--header-address')
    .header__wrapper-main-nav
      +header-nav('header__main-nav')
